---

<Layout title="Events">
  <TopBar />
  <div id="events_body">
    <h1><u>Events {year}</u></h1>
    <strong id="top_text">Hier trefft ihr uns dieses Jahr an</strong>
    <div id="list_body">
      <ul>
        {
          event01 && (
            <ul>
              <strong>{event01}</strong>
              <li>{date01}</li>
              <li>{location01}</li>
            </ul>
          )
        }
        <p class="break"></p>
        {
          event02 && (
            <ul>
              <strong>{event02}</strong>
              <li>{date02}</li>
              <li>{location02}</li>
            </ul>
          )
        }
        <p class="break"></p>
        {
          event03 && (
            <ul>
              <strong>{event03}</strong>
              <li>{date03}</li>
              <li>{location03}</li>
            </ul>
          )
        }
        <p class="break"></p>
        {
          event04 && (
            <ul>
              <strong>{event04}</strong>
              <li>{date04}</li>
              <li>{location04}</li>
            </ul>
          )
        }
        <p class="break"></p>
        {
          event05 && (
