<style>
  @media (min-width: 250px) {
    footer {
      z-index: -1;
      text-align: center;
      font-size: calc(var(--text-font-size) - 0.25rem);
      padding: 1rem 1rem 2rem 1rem;
      color: var(--color-light-2);
      box-shadow: 5px 0px 2px var(--box-shadow);
    }

    a {
      text-decoration: none;
    }

    .link-grey {
      color: var(--color-light-2);
    }

    #menu {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
      margin-left: -2.5rem;
    }

    #menu a {
      font-weight: bold;
      color: var(--color-background-primary);
      width: 115px;
      height: 59px;
      background-image: url("/pillar_2_horizontal.png");
      background-size: cover;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      transition: 0.3s;
    }

    #menu a:hover {
      transform: translateY(-15px);
      transition: 0.3s;
    }

    .social-icons {
      display: flex;
      justify-content: center;
      gap: 10px; /* Adjust the gap as needed */
    }

    /* Social media icons format start */
    .fa {
      padding: 20px;
      font-size: 30px;
      width: 73px;
      text-align: center;
      text-decoration: none;
      margin: 5px 2px;
      transition: 0.3s;
      box-shadow: 0px 1px 2px var(--box-shadow);
    }

    .fa:hover {
      opacity: 0.7;
    }

    .fa-instagram {
      background: #125688;
      color: white;
    }

    .fa-youtube {
      background: #bb0000;
      color: white;
    }

    .fa-facebook {
      background: #3b5998;
      color: white;
    }

    .fa-twitter {
      background: #55acee;
      color: white;
    }

    /* Social media icons format end */

    #to_top_link {
      display: inline-block; /* Change the display property to inline-block */
      color: var(--text-color-standard);
      background-color: var(--color-secondary);
      margin: 0.75rem 0 0;
      padding: 0.6rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: 0.3s;
      box-shadow: 0px 1px 2px var(--box-shadow);
    }

    #to_top_link:hover {
      opacity: 0.7;
    }
  }
</style>
