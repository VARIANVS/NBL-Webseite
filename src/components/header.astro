    <input id="toggle" name="toggle" type="checkbox" />
    <label for="toggle">
      <span>Menu</span>
      <div></div>
      <div></div>
      <div></div>
    </label>
    <a href="index.html" class="logo_link">
      <img
        class="logo"
        src="/public/nbl_logo_black.png"
        alt="Das offizielle Logo"
      />
    </a>
    <ul id="menu">
      <a href="index.html"><li>Home</li></a>
      <a href="events.html"><li>Veranstalungen</li></a>
