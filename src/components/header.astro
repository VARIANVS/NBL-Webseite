<style>
  .logo {
    position: fixed;
    z-index: 1;
    opacity: 0;
    transition:
      opacity 0.8s ease,
      transform 0.8s ease;
    top: 0;
    left: 10svw;
    transform: translateY(-100%);
    margin-top: 1.5em;
  }

  /* Das Logo anzeigen, wenn das Men√º aktiviert ist */
  #menuToggle input:checked ~ .logo_link .logo {
    opacity: 1;
    top: 0;
    transform: translateY(0%);
  }
  #menuToggle {
    display: block;
    position: fixed;
    top: 40px;
    right: 50px;
    z-index: 1;
  }

  #menuToggle a {
    text-decoration: none;
    color: #ffffff;
    -webkit-transition: color 0.3s ease;
    -o-transition: color 0.3s ease;
    transition: color 0.3s ease;
  }

  #menuToggle a:hover {
    color: #4f7794;
  }

  /* The hamburger button hidden inside an input element */
  #menuToggle input {
    display: block;
    position: fixed;
    width: 35px;
    height: 30px;
    top: 37px;
    right: 32px;
    cursor: pointer;
    opacity: 0;
    z-index: 3;
    -webkit-touch-callout: none;
  }

  #menuToggle label {
    position: fixed;
    display: block;
    width: 30px;
    height: 30px;
    z-index: 2;
  }
  #menuToggle label span {
    display: none;
  }

  /*
 * Hamburger
 */
  #menuToggle label div {
    display: block;
    width: 35px;
    height: 4px;
    margin-bottom: 7px;
    position: relative;
    background: #ffffff;
    border-radius: 3px;
    z-index: 1;
    -webkit-transform-origin: 4px 0px;
    -ms-transform-origin: 4px 0px;
    transform-origin: 4px 0px;
    -webkit-transition: all 0.8s ease;
    -o-transition: all 0.8s ease;
    transition: all 0.8s ease;
    right: 20px;
    top: 3px;
  }

  #menuToggle label div:first-child {
    -webkit-transform-origin: 0% 100%;
    -ms-transform-origin: 0% 100%;
    transform-origin: 0% 100%;
  }

  #menuToggle label div:nth-child(2) {
    -webkit-transform-origin: 0% 0%;
    -ms-transform-origin: 0% 0%;
    transform-origin: 0% 0%;
  }

  /* 
 * Change the color of the hamburger when toggled
 */
  #menuToggle input:checked + label div {
    background: #232323;
  }
  /*
 * Use absolute positioning to place the menu off-screen
 */
  #menu {
    display: flex;
    position: fixed;
    width: 100svw;
    max-height: 40px;
    margin: -80px 0 0 0px;
    padding: 50px;
    padding-top: 110px;
    background: var(--color-primary);
    list-style-type: square;
    top: -18%;
    right: 0;
    padding-right: 100px;
    -webkit-transition: top 0.8s ease;
    -o-transition: top 0.8s ease;
    transition: top 0.8s ease;
    flex-direction: row;
    justify-content: right;
    gap: 4svw;
  }

  #menu li {
    padding: 10px 0;
    font-size: 22px;
    font-weight: bold;
  }

  #menuToggle input:checked ~ ul {
    top: 0;
  }

  @media (max-width: 768px) {
    .logo {
      max-width: 50%; /* Set the maximum width to 100% */
      height: auto; /* Allow the height to adjust automatically */
    }
  }
</style>
