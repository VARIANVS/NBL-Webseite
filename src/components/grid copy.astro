---
interface Props {
  headline1: string;
  headline2: string;
  headline3: string;
  headline4: string;
  headline5: string;
  headline6: string;
}

const {
  headline1,
  headline2 = Astro,
  headline3 = Astro,
  headline4 = Astro,
  headline5 = Astro,
  headline6 = Astro,
} = Astro.props;
---

<div class="grid">
  <div class="container">
    <h2>{headline1}</h2>
    <p>30-word Lorem Ipsum paragraph 1</p>
  </div>
  <div class="container">
    <h2>{headline2}</h2>
    <p>30-word Lorem Ipsum paragraph 2</p>
  </div>
  <div class="container">
    <h2>{headline3}</h2>
    <p>30-word Lorem Ipsum paragraph 3</p>
  </div>
  <div class="container">
    <h2>{headline4}</h2>
    <p>30-word Lorem Ipsum paragraph 4</p>
  </div>
  <div class="container">
    <h2>{headline5}</h2>
    <p>30-word Lorem Ipsum paragraph 5</p>
  </div>
  <div class="container">
    <h2>{headline6}</h2>
    <p>30-word Lorem Ipsum paragraph 6</p>
  </div>
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .container {
    background-color: #1a202c;
    color: #fff;
    padding: 20px;
    border-radius: 8px;
  }
</style>
